{
  "name": "vidsync",
  "version": "1.0.0",
  "description": "Vidsync - Fast file sync between your devices",
  "main": "dist/main/main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "react-start": "cross-env PORT=3001 BROWSER=none react-scripts start",
    "build-main": "tsc -p tsconfig.json",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "electron-start": "wait-on http://localhost:3001 && cross-env NODE_ENV=development electron .",
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3001 && npm run electron-start\"",
    "build": "npm run build-main && npm run react-build && electron-builder",
    "dev": "concurrently \"npm run react-start\" \"npm run electron-start\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.0",
    "@supabase/supabase-js": "^2.38.4",
    "axios": "^1.5.0",
    "lucide-react": "^0.292.0"
  }
}
